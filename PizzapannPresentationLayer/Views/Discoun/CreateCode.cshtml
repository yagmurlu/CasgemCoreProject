@model Discount
@{
    ViewData["Title"] = "CreateCode";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni İndirim Kodu Sayfası</h1>


<form method="post">
    <label>İndirim Kodu</label>
    <input  type="text" class="form-control" asp-for="DiscountCode" value="@ViewBag.v"/>
    <br />
    <label>İndirim Kodu Kullanım Sayfası</label>
    <input type="text" class="form-control"style="background-color:antiquewhite" asp-for="DiscountUseNumber"  />
    <br />
    <button class="brn btn-outline-primary">Kupon Oluştur</button>
</form>